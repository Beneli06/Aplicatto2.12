              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Proyecto Postman\",\n  \"description\": \"Creado desde colección\",\n  \"lineId\": \"{{line_id}}\",\n  \"leaderId\": \"2\",\n  \"year\": 2025,\n  \"state\": \"En Curso\",\n  \"tags\": [\"postman\", \"demo\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/proyectos",
              "host": [ "{{base_url}}" ],
